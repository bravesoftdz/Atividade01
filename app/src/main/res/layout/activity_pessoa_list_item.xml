<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/fundo">



    <TextView
        android:id="@+id/pessoa_list_item_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/pessoa_list_item_tvNome"
        style="@style/texto"/>


    <TextView
        android:id="@+id/pessoa_list_item_tvEndereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/pessoa_list_item_tvEndereco"
        style="@style/texto"/>

    <TextView
        android:id="@+id/pessoa_list_item_tvTelefone"
        style="@style/texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/pessoa_list_item_tvTelefone" />
    


</LinearLayout>
